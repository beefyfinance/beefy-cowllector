{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "declaration": true,
        "resolveJsonModule": true,
        "types": ["jest"],
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitOverride": true,
        "noImplicitThis": true
    },
    "ts-node": {
        "compilerHost": true,
        "emit": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "old"]
}
